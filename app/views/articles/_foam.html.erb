<div class="container mt-4">
  <div id="page-content">

    <% if @article.errors.any? %>
      <div class="alert alert-danger">
        <h4>The following errors prevented the article from being saved:</h4>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @article, local: true, data: { turbo: false } do |form| %>
      
      <div class="form-group row mb-3">
        <%= form.label :title, "Title", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= form.label :description, "Description", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_area :description, rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= form.submit "Submit", class: "btn btn-outline-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <div class="d-flex justify-content-center mt-4">
      <%= link_to 'Go back', articles_path, class: 'btn btn-outline-secondary' %>
    </div>

  </div>
</div>
