<h1 class="text-center mt-4">Categories</h1>

<!-- Top pagination -->
<div class="apple_pagination mt-4">
  <div class="page_info">
    <%= page_entries_info @categories %>
  </div>
  <%= will_paginate @categories, container: false %>
</div>

<div class="container">
  <div class="row justify-content-md-center">
    <% @categories.each do |category| %>
      <div class="col-4 mb-4">
        <div class="card text-center shadow-sm mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to category.name, category_path(category), class: "text-success" %>
            </h5>
          </div>

          <div class="card-footer text-muted">
            Created on <%= category.created_at.strftime("%B %d, %Y at %I:%M %p") %> |
            Last updated on <%= category.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Bottom pagination -->
<div class="apple_pagination mb-4">
  <div class="page_info">
    <%= page_entries_info @categories %>
  </div>
  <%= will_paginate @categories, container: false %>
</div>
