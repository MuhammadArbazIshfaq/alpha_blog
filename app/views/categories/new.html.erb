<h1 class="text-center mt-4">Create a New Category</h1>



<div class="container mt-4">
  <div id="page-content">
    <% if @category.errors.any? %>
      <div class="alert alert-danger">
        <h4>The following errors prevented the category from being saved:</h4>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @category, local: true, data: { turbo: false } do |form| %>
      <div class="form-group row mb-3">
        <%= form.label :name, "CategoryName", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= form.submit "Create Category", class: "btn btn-outline-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <div class="d-flex justify-content-center mt-4">
      <%= link_to "Go back", articles_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>

