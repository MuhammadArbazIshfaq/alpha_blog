<div class="container mt-4">
  <div id="page-content">
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4>The following errors prevented the user from being saved:</h4>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @user, local: true, data: { turbo: false } do |form| %>
      
      <div class="form-group row mb-3">
        <%= form.label :username, "Username", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :username, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= form.label :email, "Email", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= form.label :password, "Password", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= form.submit(@user.new_record? ? "Sign": "Update account", class: "btn btn-outline-primary btn-lg") %>
        </div>
      </div>
    <% end %>

    <div class="d-flex justify-content-center mt-4">
      <%= link_to 'Go back', articles_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>
