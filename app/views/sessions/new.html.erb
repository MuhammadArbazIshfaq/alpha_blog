<h1 class="text-center mt-4">Login for Alpha Blog</h1>

<div class="container mt-4">
  <div id="page-content">
    <%= form_with scope: :session, url: login_path, local: true, data: { turbo: false } do |form| %>
      <div class="form-group row mb-3">
        <%= form.label :email, "Email", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= form.label :password, "Password", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= form.submit "Login", class: "btn btn-outline-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <div class="d-flex justify-content-center mt-4">
      <%= link_to 'Go back', articles_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>
